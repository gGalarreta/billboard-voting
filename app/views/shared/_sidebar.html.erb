<aside class="w-48 bg-blue shadow-lg p-5 h-screen fixed left-0 top-16">
  <nav class="space-y-2" data-controller="billboards">
    <%= link_to root_path(filter: 'home'), class: "flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-200", data: { action: "billboards#filter" } do %>
      <i class="fa-solid fa-house text-gray-700"></i>
      <span>Home</span>
    <% end %>

    <%= link_to root_path(filter: 'trending'), class: "flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-200", data: { action: "billboards#filter" } do %>
      <i class="fa-solid fa-fire text-red-500"></i>
      <span>Trending</span>
    <% end %>

    <%= link_to root_path(filter: 'fresh'), class: "flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-200", data: { action: "billboards#filter" } do %>
      <i class="fa-solid fa-star text-yellow-500"></i>
      <span>New & Fresh</span>
    <% end %>
  </nav>
</aside>
