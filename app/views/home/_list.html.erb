<div id="billboards-container" data-billboards-target="list">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% billboards.each do |billboard| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden w-80 h-96 flex flex-col items-center" data-controller="votes">
        <img src="<%= billboard.url %>" alt="Billboard Image" class="w-full h-56 object-cover rounded-md">
        
        <p class="mt-3 text-gray-700 text-center font-semibold px-4"><%= billboard.address %></p>

        <div class="flex items-center space-x-3 mt-3">
          <button data-action="click->votes#upvote" data-id="<%= billboard.id %>" class="text-green-500 hover:text-green-700 text-2xl">
            <i class="fa-solid fa-arrow-up"></i>
          </button>
          <span class="text-gray-700 font-semibold" data-votes-target="likes"><%= billboard.likes %></span>

          <button data-action="click->votes#downvote" data-id="<%= billboard.id %>" class="text-red-500 hover:text-red-700 text-2xl">
            <i class="fa-solid fa-arrow-down"></i>
          </button>
          <span class="text-gray-700 font-semibold" data-votes-target="dislikes"><%= billboard.dislikes %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

