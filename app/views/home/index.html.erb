<div class="p-6">
  <div id="billboards-container" data-billboards-target="list">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @billboards.each do |billboard| %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden w-80 h-96 flex flex-col items-center">
          <img src="<%= billboard.url %>" alt="Billboard Image" class="w-full h-56 object-cover rounded-md">
          
          <p class="mt-3 text-gray-700 text-center font-semibold px-4"><%= billboard.address %></p>

          <div class="flex items-center space-x-3 mt-3">
            <button class="text-green-500 hover:text-green-700 text-2xl">
              <i class="fa-solid fa-arrow-up"></i>
            </button>
            <span class="text-gray-700 font-semibold"><%= billboard.likes %></span>
            <button class="text-red-500 hover:text-red-700 text-2xl">
              <i class="fa-solid fa-arrow-down"></i>
            </button>
            <span class="text-gray-700 font-semibold"><%= billboard.dislikes %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="pagination-container" data-billboards-target="pagination" class="mt-6 flex justify-center space-x-2">
    <% if @page > 1 %>
      <%= link_to 'Previous', root_path(page: @page - 1, filter: params[:filter]), class: "px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300", data: { action: "billboards#filter" } %>
    <% end %>

    <%= link_to 'Next', root_path(page: @page + 1, filter: params[:filter]), class: "px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300", data: { action: "billboards#filter" } if @total_billboards > @page * @per_page %>
  </div>
</div>
